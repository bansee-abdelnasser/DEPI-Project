@{
    ViewData["Title"] = "My Profile - Eventa";
}

@section Styles {
    <style>
        .profile-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 6rem 0 5rem;
            text-align: center;
            position: relative;
            overflow: hidden;
            border-radius: 0 0 40px 40px;
        }

            .profile-header::before {
                content: '';
                position: absolute;
                inset: 0;
                background: url('https://images.unsplash.com/photo-1492684223066-81342ee5ff30?w=1920') center/cover;
                opacity: 0.15;
            }

        .profile-avatar {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            object-fit: cover;
            border: 8px solid rgba(255,255,255,0.3);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
            margin-bottom: 1.5rem;
        }

        .profile-header h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin: 0 0 0.8rem;
        }

        .profile-header p {
            font-size: 1.4rem;
            opacity: 0.95;
            margin: 0 0 2rem;
        }

        .profile-container {
            max-width: 1100px;
            margin: -4rem auto 6rem;
            padding: 0 1.5rem;
            position: relative;
            z-index: 10;
        }

        .profile-card {
            background: white;
            border-radius: 32px;
            box-shadow: var(--shadow-xl);
            overflow: hidden;
        }

        .profile-tabs {
            display: flex;
            background: #f1f5f9;
            border-radius: 20px 20px 0 0;
            overflow: hidden;
        }

        .profile-tab {
            flex: 1;
            padding: 1.5rem;
            background: none;
            border: none;
            font-size: 1.15rem;
            font-weight: 600;
            color: #64748b;
            cursor: pointer;
            transition: all 0.3s;
        }

            .profile-tab.active {
                background: white;
                color: var(--primary-color);
                font-weight: 700;
                box-shadow: 0 -4px 0 var(--primary-color) inset;
            }

        .tab-content {
            padding: 3rem;
            display: none;
        }

            .tab-content.active {
                display: block;
            }

        .tickets-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
            gap: 2rem;
        }

        .ticket-item {
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: var(--shadow-lg);
            transition: all 0.4s;
        }

            .ticket-item:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-xl);
            }

        .ticket-banner {
            height: 140px;
            background: linear-gradient(135deg, #6366f1, #8b5cf6);
            padding: 1.5rem;
            color: white;
            text-align: center;
        }

            .ticket-banner h4 {
                font-size: 1.4rem;
                margin: 0.5rem 0;
                font-weight: 700;
            }

        .ticket-body {
            padding: 2rem;
        }

        .ticket-info {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1.5rem;
            font-size: 1rem;
        }

            .ticket-info strong {
                color: #1e293b;
                display: block;
            }

        .events-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .empty-state {
            text-align: center;
            padding: 8rem 2rem;
            color: #94a3b8;
        }

            .empty-state svg {
                width: 120px;
                height: 120px;
                opacity: 0.4;
                margin-bottom: 2rem;
            }

        .settings-grid {
            max-width: 700px;
            display: grid;
            gap: 2rem;
        }

        .setting-item {
            background: #f8fafc;
            padding: 2rem;
            border-radius: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: var(--shadow-md);
        }

            .setting-item strong {
                font-size: 1.2rem;
                color: #1e293b;
            }

            .setting-item p {
                margin: 0.5rem 0 0;
                color: #64748b;
                font-size: 0.98rem;
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .profile-header h1 {
                font-size: 2.8rem;
            }

            .profile-tabs {
                flex-direction: column;
            }

            .profile-tab {
                border-radius: 0;
            }

            .tickets-grid, .events-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<!-- Profile Header -->
<div class="profile-header">
    <div class="container">
        <img id="profileAvatar" src="https://via.placeholder.com/140/6366f1/ffffff?text=U" alt="Profile" class="profile-avatar">
        <h1 id="profileName">Loading...</h1>
        <p id="profileEmail">loading@example.com</p>
        <a asp-controller="Account" asp-action="EditProfile"
           class="btn btn-outline"
           style="margin-top:1.5rem;padding:1rem 2.5rem;font-size:1.1rem;background:rgba(255,255,255,0.3);border:2px solid white;color:white;z-index:999;position:relative;">
            Edit Profile
        </a>
    </div>
</div>

<!-- Profile Content -->
<div class="profile-container">
    <div class="profile-card">

        <div class="profile-tabs">
            <button class="profile-tab active" data-tab="tickets">My Tickets</button>
            <button class="profile-tab" data-tab="favorites">Saved Events</button>
            <button class="profile-tab" data-tab="settings">Settings</button>
        </div>

        <!-- My Tickets -->
        <div id="tickets" class="tab-content active">
            <div class="tickets-grid" id="ticketsList">
                <!-- Tickets injected by JS -->
            </div>
        </div>

        <!-- Saved Events -->
        <div id="favorites" class="tab-content">
            <div class="events-grid" id="favoritesList">
                <div class="empty-state">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                    <h3>No saved events</h3>
                    <p>Click the heart icon on any event to save it here for later!</p>
                </div>
            </div>
        </div>

        <!-- Settings -->
        <div id="settings" class="tab-content">
            <div class="settings-grid">
                <div class="setting-item">
                    <div>
                        <strong>Email Notifications</strong>
                        <p>Receive booking confirmations and updates</p>
                    </div>
                    <input type="checkbox" checked>
                </div>
                <div class="setting-item">
                    <div>
                        <strong>Marketing & Offers</strong>
                        <p>Get exclusive deals and event recommendations</p>
                    </div>
                    <input type="checkbox" checked>
                </div>
                <div class="setting-item">
                    <div>
                        <strong>Account Privacy</strong>
                        <p>Your profile is visible to organizers</p>
                    </div>
                    <input type="checkbox" checked>
                </div>
                <div style="margin-top:3rem;text-align:center;">
                    <button onclick="logout()" class="btn" style="background:#ef4444;color:white;padding:1rem 3rem;font-size:1.1rem;">
                        Logout from All Devices
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/profile.js" asp-append-version="true"></script>