@{
    ViewData["Title"] = "Edit Profile - Eventa";
}

@section Styles {
    <style>
        .page-header {
            text-align: center;
            padding: 5rem 0 2rem;
            background: linear-gradient(135deg,rgba(99,102,241,0.05),rgba(139,92,246,0.05));
        }

            .page-header h1 {
                font-size: 3.2rem;
                font-weight: 800;
                background: linear-gradient(135deg,var(--primary-color),var(--secondary-color));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                color: transparent;
            }

        .profile-container {
            max-width: 800px;
            margin: 0 auto 6rem;
            background: white;
            border-radius: 32px;
            box-shadow: var(--shadow-xl);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg,var(--primary-color),var(--secondary-color));
            padding: 4rem 2rem 6rem;
            text-align: center;
            color: white;
            position: relative;
        }

        .avatar-wrapper {
            position: relative;
            display: inline-block;
            margin-bottom: 1.5rem;
        }

        .profile-avatar {
            width: 160px;
            height: 160px;
            border-radius: 50%;
            object-fit: cover;
            border: 8px solid rgba(255,255,255,0.3);
            box-shadow: 0 15px 35px rgba(0,0,0,0.25);
        }

        .change-photo-btn {
            position: absolute;
            bottom: 8px;
            right: 8px;
            width: 44px;
            height: 44px;
            background: var(--primary-dark);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            transition: var(--transition);
        }

            .change-photo-btn:hover {
                transform: scale(1.1);
            }

        .profile-header h2 {
            font-size: 2.4rem;
            margin: 0 0 0.5rem;
            font-weight: 700;
        }

        .profile-header p {
            opacity: 0.95;
            font-size: 1.2rem;
        }

        .form-body {
            padding: 0 3rem 4rem;
            margin-top: -3rem;
        }

        .form-card {
            background: white;
            border-radius: 24px;
            padding: 2.8rem;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(300px,1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.8rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.8rem;
                font-weight: 600;
                color: var(--text-primary);
                font-size: 1.05rem;
            }

                .form-group label span {
                    color: #ef4444;
                }

        .form-control {
            width: 100%;
            padding: 1.2rem 1.4rem;
            border: 2.5px solid #e2e8f0;
            border-radius: 16px;
            font-size: 1.05rem;
            transition: var(--transition);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 5px rgba(99,102,241,0.12);
            }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .password-section {
            background: #f8fafc;
            padding: 2.5rem;
            border-radius: 20px;
            border: 2px dashed #e0e7ff;
        }

            .password-section h3 {
                margin: 0 0 2rem;
                font-size: 1.8rem;
                color: var(--text-primary);
            }

        .form-actions {
            display: flex;
            gap: 1.5rem;
            margin-top: 3rem;
            flex-wrap: wrap;
        }

        .btn-save {
            flex: 1;
            padding: 1.3rem;
            font-size: 1.3rem;
            font-weight: 700;
            border-radius: 18px;
        }
    </style>
}

<div class="page-header">
    <div class="container">
        <h1>Edit Profile</h1>
        <p style="color:var(--text-secondary);font-size:1.3rem;">Keep your information up to date</p>
    </div>
</div>

<div class="container">
    <div class="profile-container">
        <div class="profile-header">
            <div class="avatar-wrapper">
                <img id="profileAvatarImg" src="https://via.placeholder.com/160/6366f1/ffffff?text=User" alt="Profile Photo" class="profile-avatar">
                <label class="change-photo-btn" title="Change Photo">
                    <input type="file" id="photoInput" accept="image/*" style="display:none;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1-3 0z" />
                        <path d="M1.5 2A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13zm13 1a.5.5 0 0 1 .5.5v6l-3.775-1.947a.5.5 0 0 0-.577.094l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12v.54A.5.5 0 0 1 1 12.5v-9a.5.5 0 0 1 .5-.5h13z" />
                    </svg>
                </label>
            </div>
            <h2 id="profileNameHeader">Loading...</h2>
            <p id="profileEmailHeader">Loading...</p>
        </div>

        <div class="form-body">
            <form id="editProfileForm">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Full Name <span>*</span></label>
                        <input type="text" id="editName" class="form-control" placeholder="John Doe" required>
                    </div>
                    <div class="form-group">
                        <label>Email Address <span>*</span></label>
                        <input type="email" id="editEmail" class="form-control" placeholder="john@example.com" required>
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input type="tel" id="phone" class="form-control" placeholder="+1 (555) 000-0000">
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" id="location" class="form-control" placeholder="New York, USA">
                    </div>
                </div>

                <div class="form-group">
                    <label>Bio</label>
                    <textarea id="bio" class="form-control" placeholder="Tell us about yourself..."></textarea>
                </div>

                <div class="password-section">
                    <h3>Change Password (Leave blank to keep current)</h3>
                    <div class="form-grid">
                        <div class="form-group">
                            <label>Current Password</label>
                            <input type="password" id="currentPassword" class="form-control" placeholder="••••••••">
                        </div>
                        <div></div>
                    </div>
                    <div class="form-grid">
                        <div class="form-group">
                            <label>New Password</label>
                            <input type="password" id="newPassword" class="form-control" placeholder="••••••••">
                        </div>
                        <div class="form-group">
                            <label>Confirm New Password</label>
                            <input type="password" id="confirmPassword" class="form-control" placeholder="••••••••">
                            <span class="error-message" id="passwordError"></span>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-save">
                        Save Changes
                    </button>
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline btn-save">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/edit-profile.js" asp-append-version="true"></script>