@{
    ViewData["Title"] = "Organizer Dashboard - Eventa";
}

@section Styles {
    <style>
        .dashboard-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 6rem 0 5rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .dashboard-header::before {
                content: '';
                position: absolute;
                inset: 0;
                background-image: url('https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=1920');
                background-position: center;
                background-size: cover;
                background-repeat: no-repeat;
                opacity: 0.12;
            }

            .dashboard-header h1 {
                font-size: 4rem;
                font-weight: 800;
                margin: 0 0 1rem;
                position: relative;
            }

            .dashboard-header p {
                font-size: 1.4rem;
                opacity: 0.95;
                max-width: 700px;
                margin: 0 auto;
                position: relative;
            }

        .dashboard-container {
            max-width: 1400px;
            margin: 0 auto 6rem;
            padding: 0 1.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 2rem;
            margin-bottom: 4rem;
        }

        .stat-card {
            background: white;
            border-radius: 24px;
            padding: 2.2rem;
            text-align: center;
            box-shadow: var(--shadow-lg);
            transition: all 0.4s ease;
        }

            .stat-card:hover {
                transform: translateY(-10px);
                box-shadow: var(--shadow-xl);
            }

        .stat-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 50%;
            margin: 0 auto 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
        }

        .stat-card h3 {
            font-size: 2.8rem;
            font-weight: 800;
            margin: 0.5rem 0;
            color: var(--primary-color);
        }

        .stat-label {
            color: #64748b;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .stat-change {
            font-weight: 600;
            font-size: 0.95rem;
        }

        .positive {
            color: #10b981;
        }

        .warning {
            color: #f59e0b;
        }

        .tabs-container {
            background: white;
            border-radius: 28px;
            box-shadow: var(--shadow-xl);
            overflow: hidden;
        }

        .tab-buttons {
            display: flex;
            background: #f1f5f9;
            border-bottom: 1px solid #e2e8f0;
        }

        .tab-btn {
            flex: 1;
            padding: 1.4rem;
            background: none;
            border: none;
            font-size: 1.1rem;
            font-weight: 600;
            color: #64748b;
            cursor: pointer;
            transition: all 0.3s;
        }

            .tab-btn.active {
                background: white;
                color: var(--primary-color);
                border-bottom: 4px solid var(--primary-color);
            }

        .tab-content {
            padding: 3rem;
            display: none;
        }

            .tab-content.active {
                display: block;
            }

        .events-list {
            display: flex;
            flex-direction: column;
            gap: 1.8rem;
        }

        .event-item {
            background: #ffffff;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: var(--shadow-md);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s;
            border: 1px solid #f1f5f9;
        }

            .event-item:hover {
                box-shadow: var(--shadow-xl);
                border-color: var(--primary-color);
            }

        .event-info h3 {
            font-size: 1.5rem;
            margin: 0 0 0.6rem;
            color: #1e293b;
        }

        .event-meta {
            color: #64748b;
            font-size: 1rem;
        }

        .event-status {
            padding: 0.5rem 1.2rem;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .status-live {
            background: #dcfce7;
            color: #166534;
        }

        .status-draft {
            background: #fef3c7;
            color: #d97706;
        }

        .status-ended {
            background: #fee2e2;
            color: #991b1b;
        }

        .event-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

            .event-actions button {
                padding: 0.7rem 1.4rem;
                border-radius: 14px;
                font-weight: 600;
                transition: all 0.3s;
            }

        .empty-state {
            text-align: center;
            padding: 8rem 2rem;
            color: #94a3b8;
        }

            .empty-state svg {
                width: 120px;
                height: 120px;
                opacity: 0.4;
                margin-bottom: 2rem;
            }

        .create-event-cta {
            text-align: center;
            margin: 3rem 0;
        }

            .create-event-cta .btn {
                padding: 1.4rem 3.5rem;
                font-size: 1.3rem;
                font-weight: 700;
            }

        @@media (max-width: 768px) {
            .dashboard-header h1 {
                font-size: 2.8rem;
            }

            .event-item {
                flex-direction: column;
                align-items: stretch;
                text-align: center;
            }

            .event-actions {
                justify-content: center;
                margin-top: 1.5rem;
            }

            .tab-buttons {
                flex-direction: column;
            }
        }
    </style>
}

<!-- Dashboard Header -->
<div class="dashboard-header">
    <div class="container">
        <h1>Organizer Dashboard</h1>
        <p>Manage your events, track performance, and reach more attendees</p>
    </div>
</div>

<!-- Main Dashboard -->
<div class="dashboard-container">

    <!-- Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">Calendar</div>
            <div class="stat-label">Total Events</div>
            <h3 id="totalEvents">0</h3>
            <div class="stat-change positive">+0 this month</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">Ticket</div>
            <div class="stat-label">Tickets Sold</div>
            <h3 id="ticketsSold">0</h3>
            <div class="stat-change positive">+0 this month</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">Dollar</div>
            <div class="stat-label">Total Revenue</div>
            <h3 id="totalRevenue">$0</h3>
            <div class="stat-change positive">+0 this month</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">Star</div>
            <div class="stat-label">Average Rating</div>
            <h3 id="avgRating">--</h3>
            <div class="stat-change">from 0 reviews</div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="tabs-container">
        <div class="tab-buttons">
            <button class="tab-btn active" data-tab="events">My Events</button>
            <button class="tab-btn" data-tab="analytics">Analytics</button>
            <button class="tab-btn" data-tab="reviews">Reviews</button>
        </div>

        <!-- My Events Tab -->
        <div id="events" class="tab-content active">
            <div class="create-event-cta">
                <h2 style="margin:0 0 1.5rem;font-size:2.2rem;">Your Events</h2>
                <a asp-controller="Events" asp-action="Create" class="btn btn-primary">
                    Create New Event
                </a>
            </div>

            <div id="organizerEvents" class="events-list">
                <!-- Events injected by JS -->
            </div>
        </div>

        <!-- Analytics Tab -->
        <div id="analytics" class="tab-content">
            <div class="empty-state">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                <h3>Analytics Coming Soon</h3>
                <p>Track views, sales, and performance once your events go live.</p>
            </div>
        </div>

        <!-- Reviews Tab -->
        <div id="reviews" class="tab-content">
            <div class="empty-state">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L3 12v-2a2 2 0 012-2h7" />
                </svg>
                <h3>No Reviews Yet</h3>
                <p>Attendee reviews will appear here after your events take place.</p>
            </div>
        </div>
    </div>
</div>

<script src="~/js/organizer-dashboard.js" asp-append-version="true"></script>