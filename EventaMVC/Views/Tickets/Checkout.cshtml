@{
    ViewData["Title"] = "Checkout - Eventa";
}

@section Styles {
    <style>
        .checkout-header {
            text-align: center;
            padding: 4rem 0 2rem;
        }

            .checkout-header h1 {
                font-size: 3.5rem;
                font-weight: 800;
                background: linear-gradient(135deg,var(--primary-color),var(--secondary-color));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                color: transparent;
                margin: 0;
            }

        .checkout-wrapper {
            max-width: 1300px;
            margin: 0 auto 5rem;
            display: grid;
            grid-template-columns: 1fr 420px;
            gap: 3rem;
            padding: 0 1rem;
        }

        .form-section, .order-summary {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-xl);
            padding: 2.8rem;
            margin-bottom: 2rem;
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 2rem;
            color: var(--text-primary);
            position: relative;
            padding-bottom: 0.8rem;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 80px;
                height: 4px;
                background: linear-gradient(135deg,var(--primary-color),var(--secondary-color));
                border-radius: 2px;
            }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px,1fr));
            gap: 1.8rem;
        }

        .form-control {
            width: 100%;
            padding: 1.1rem 1.4rem;
            border: 2.5px solid #e2e8f0;
            border-radius: 16px;
            font-size: 1.05rem;
            transition: var(--transition);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 5px rgba(99,102,241,0.15);
            }

        .cart-item {
            display: flex;
            align-items: center;
            gap: 1.8rem;
            padding: 1.8rem 0;
            border-bottom: 1px solid #f1f5f9;
        }

            .cart-item:last-child {
                border: none;
                padding-bottom: 0;
            }

            .cart-item img {
                width: 110px;
                height: 110px;
                object-fit: cover;
                border-radius: 16px;
                box-shadow: var(--shadow-md);
            }

        .item-details h4 {
            font-size: 1.3rem;
            margin: 0 0 0.5rem;
            color: var(--text-primary);
        }

        .item-meta {
            color: var(--text-secondary);
            font-size: 0.95rem;
            margin: 0.4rem 0;
        }

        .item-price {
            font-size: 1.5rem;
            font-weight: 800;
            color: var(--primary-color);
        }

        .price-summary {
            background: #f8fafc;
            padding: 2rem;
            border-radius: 20px;
            margin: 2rem 0;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            margin: 1rem 0;
            font-size: 1.15rem;
        }

        .total-row {
            font-size: 1.9rem;
            font-weight: 800;
            color: var(--text-primary);
            padding-top: 1.5rem;
            border-top: 3px dashed #e2e8f0;
        }

        .total-amount {
            color: var(--primary-color);
            font-size: 2.1rem;
        }

        #completeCheckout {
            width: 100%;
            padding: 1.6rem;
            font-size: 1.5rem;
            font-weight: 800;
            border: none;
            border-radius: 18px;
            margin-top: 1.5rem;
            background: linear-gradient(135deg,var(--primary-color),var(--secondary-color));
            color: white;
            cursor: pointer;
            transition: var(--transition);
        }

            #completeCheckout:hover {
                transform: translateY(-4px);
                box-shadow: 0 20px 40px rgba(99,102,241,0.35);
            }

            #completeCheckout.loading {
                pointer-events: none;
                opacity: 0.8;
            }

                #completeCheckout.loading::after {
                    content: '';
                    width: 24px;
                    height: 24px;
                    border: 3px solid #fff;
                    border-top-color: transparent;
                    border-radius: 50%;
                    animation: spin 1s linear infinite;
                    display: inline-block;
                    margin-left: 12px;
                }

        .secure-notice {
            background: linear-gradient(135deg,#f0fdf4,#dcfce7);
            border: 2px solid #86efac;
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            margin-top: 2rem;
        }

            .secure-notice p {
                margin: 0.8rem 0 0;
                color: #166534;
                font-weight: 600;
                font-size: 1.1rem;
            }

        .empty-cart {
            text-align: center;
            padding: 8rem 2rem;
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-xl);
        }

            .empty-cart svg {
                width: 140px;
                height: 140px;
                opacity: 0.3;
                margin-bottom: 1.5rem;
            }

        @@media (max-width:992px) {
            .checkout-wrapper {
                grid-template-columns: 1fr;
            }

            .order-summary {
                position: static;
            }
        }
    </style>
}

<div class="checkout-header">
    <div class="container">
        <h1>Complete Your Order</h1>
        <p style="margin-top:1rem;color:var(--text-secondary);font-size:1.3rem;">You're just one step away from your tickets!</p>
    </div>
</div>

<main class="container">
    <div id="checkoutWrapper" class="checkout-wrapper">

        <!-- Billing Form -->
        <div>
            <div class="form-section">
                <h2 class="section-title">Billing Information</h2>
                <div class="form-grid">
                    <div>
                        <label style="display:block;margin-bottom:0.6rem;font-weight:600;">Full Name <span style="color:#ef4444;">*</span></label>
                        <input type="text" id="buyerName" class="form-control" placeholder="John Doe" required>
                    </div>
                    <div>
                        <label style="display:block;margin-bottom:0.6rem;font-weight:600;">Email Address <span style="color:#ef4444;">*</span></label>
                        <input type="email" id="buyerEmail" class="form-control" placeholder="you@example.com" required>
                    </div>
                    <div>
                        <label style="display:block;margin-bottom:0.6rem;font-weight:600;">Phone Number <span style="color:#94a3b8;">(Optional)</span></label>
                        <input type="tel" id="buyerPhone" class="form-control" placeholder="+20 100 123 4567">
                    </div>
                </div>
            </div>

            <div class="secure-notice">
                <p style="font-size:3rem;margin:0;">Lock Icon</p>
                <p>Your payment information is encrypted with 256-bit SSL<br>All transactions are secure and protected</p>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="order-summary">
            <h2 class="section-title">Order Summary</h2>
            <div id="cartItemsList"></div>

            <div class="price-summary">
                <div class="price-row"><span>Subtotal</span><span id="subtotal">$0.00</span></div>
                <div class="price-row"><span>Service Fee (10%)</span><span id="fee">$0.00</span></div>
                <div class="total-row price-row">
                    <span>Total</span>
                    <span class="total-amount" id="totalPrice">$0.00</span>
                </div>
            </div>

            <button id="completeCheckout" class="btn">
                Complete Purchase
            </button>

            <p style="text-align:center;margin-top:1.5rem;color:#64748b;font-size:0.95rem;">
                By completing this purchase, you agree to our
                <a asp-controller="Home" asp-action="Terms" style="color:var(--primary-color);font-weight:600;">Terms</a> &
                <a asp-controller="Home" asp-action="Privacy" style="color:var(--primary-color);font-weight:600;">Privacy Policy</a>
            </p>
        </div>
    </div>

    <div id="emptyCart" class="empty-cart" style="display:none;">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <h3>Your cart is empty</h3>
        <p style="margin:1rem 0 2rem;color:#64748b;">Looks like you haven't added any tickets yet.</p>
        <a asp-controller="Events" asp-action="Category" class="btn btn-primary">Browse Events</a>
    </div>
</main>

<script src="~/js/checkout.js" asp-append-version="true"></script>