@{
    ViewData["Title"] = "Contact Us - Eventa";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 6rem 0 5rem;
            text-align: center;
        }

            .page-header h1 {
                font-size: 4rem;
                font-weight: 800;
                margin: 0 0 1rem;
            }

        .contact-container {
            max-width: 1100px;
            margin: 0 auto 6rem;
            padding: 0 1.5rem;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: start;
        }

        .contact-info h3 {
            font-size: 2rem;
            margin: 0 0 2rem;
        }

        .info-item {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 2rem;
            align-items: flex-start;
        }

            .info-item svg {
                width: 50px;
                height: 50px;
                padding: 12px;
                background: #f0f9ff;
                color: var(--primary-color);
                border-radius: 50%;
                flex-shrink: 0;
            }

        @@media (max-width: 992px) {
            .contact-container

        {
            grid-template-columns: 1fr;
        }

        }
    </style>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1>Contact Us</h1>
        <p style="font-size:1.4rem;opacity:0.95;">We're here to help — 24/7 support</p>
    </div>
</div>

<!-- Contact Content -->
<div class="contact-container">
    <!-- Contact Info -->
    <div class="contact-info">
        <h3>Get in touch</h3>

        <div class="info-item">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
