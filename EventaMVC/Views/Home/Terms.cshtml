@{
    Layout = "_AuthLayout";  // بدون هيدر وفوتر
    ViewData["Title"] = "Terms of Service - Eventa";
}

@section Styles {
    <style>
        body {
            background: #f8fafc;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .terms-container {
            max-width: 900px;
            width: 100%;
            background: white;
            border-radius: 32px;
            padding: 4rem 3rem;
            box-shadow: 0 30px 80px rgba(0,0,0,0.12);
            line-height: 1.8;
            margin: 0 auto;
        }

        h1 {
            font-size: 2.8rem;
            font-weight: 800;
            text-align: center;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            color: transparent;
            margin: 0 0 1rem;
        }

        .last-updated {
            text-align: center;
            color: #64748b;
            margin-bottom: 3rem;
            font-style: italic;
            font-size: 1.1rem;
        }

        h2 {
            font-size: 2rem;
            margin: 3rem 0 1.5rem;
            color: #1e293b;
            position: relative;
            padding-bottom: 0.8rem;
        }

            h2::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 70px;
                height: 4px;
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                border-radius: 2px;
            }

        p, li {
            color: #475569;
            margin-bottom: 1.2rem;
            font-size: 1.1rem;
        }

        ul {
            padding-left: 1.8rem;
            margin-bottom: 1.8rem;
        }

            ul li {
                margin-bottom: 0.9rem;
                position: relative;
            }

                ul li::marker {
                    color: var(--primary-color);
                }

        strong {
            color: #1e293b;
            font-weight: 600;
        }

        a {
            color: var(--primary-color);
            font-weight: 600;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .footer-note {
            text-align: center;
            margin-top: 5rem;
            padding-top: 2.5rem;
            border-top: 1px solid #e2e8f0;
            color: #94a3b8;
            font-size: 0.98rem;
        }

        @@media (max-width: 768px) {
            .terms-container {
                padding: 3rem 2rem;
                border-radius: 24px;
            }

            h1 {
                font-size: 2.4rem;
            }

            h2 {
                font-size: 1.8rem;
            }
        }
    </style>
}

