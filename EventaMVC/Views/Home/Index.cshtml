@{
    ViewData["Title"] = "Discover & Book Amazing Events";
}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content fade-in">
            <h1>Discover Amazing Events<br>Around You</h1>
            <p class="section-subtitle">Book tickets for concerts, conferences, sports, workshops and more</p>

            <div class="hero-search">
                <input type="text" id="searchInput" placeholder="Search events, artists, venues..." autocomplete="off">
                <button id="searchButton" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>
                    Search
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section style="padding:5rem 0;background:#f8fafc;">
    <div class="container">
        <h2 class="section-title">Browse by Category</h2>
        <div class="category-filters" style="justify-content:center;">
            <a href="@Url.Action("Category", "Events", new { cat = "music" })" class="category-card" style="background:linear-gradient(135deg,#6366f1,#8b5cf6);">
                <div style="font-size:4.5rem;margin-bottom:1rem;">Music</div>
                <h3>Music</h3>
                <p>Concerts & Festivals</p>
            </a>
            <a href="@Url.Action("Category", "Events", new { cat = "sports" })" class="category-card" style="background:linear-gradient(135deg,#ec4899,#f59e0b);">
                <div style="font-size:4.5rem;margin-bottom:1rem;">Sports</div>
                <h3>Sports</h3>
                <p>Matches & Tournaments</p>
            </a>
            <a href="@Url.Action("Category", "Events", new { cat = "tech" })" class="category-card" style="background:linear-gradient(135deg,#0ea5e9,#06b6d4);">
                <div style="font-size:4.5rem;margin-bottom:1rem;">Tech</div>
                <h3>Technology</h3>
                <p>Conferences & Meetups</p>
            </a>
            <a href="@Url.Action("Category", "Events", new { cat = "arts" })" class="category-card" style="background:linear-gradient(135deg,#d946ef,#f43f5e);">
                <div style="font-size:4.5rem;margin-bottom:1rem;">Arts</div>
                <h3>Arts & Culture</h3>
                <p>Exhibitions & Shows</p>
            </a>
        </div>
    </div>
</section>

<!-- Featured Events -->
<section style="padding:5rem 0;">
    <div class="container">
        <h2 class="section-title">Featured Events</h2>

        <div class="events-grid">
            <!-- Event Card 1 -->
            <div class="event-card fade-in" data-event-id="1">
                <img src="~/uploads/eventa1.jpg" alt="Summer Music Festival 2024" class="event-card-image">
                <span class="event-card-badge">Featured</span>
                <div class="event-card-content">
                    <span class="event-card-category">Music</span>
                    <h3 class="event-card-title">Summer Music Festival 2024</h3>
                    <div class="event-card-info">
                        <div class="event-info-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3.5V12a.5.5 0 0 1-1 0V8.5H4a.5.5 0 0 1 0-1h3V4.5A.5.5 0 0 1 8 4z" />
                            </svg>
                            June 15-17, 2024
                        </div>
                        <div class="event-info-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 0 1 0 0-6 3 3 0 0 0 0 6z" />
                            </svg>
                            Central Park, New York
                        </div>
                    </div>
                    <div class="event-card-footer">
                        <div class="event-price">$89</div>
                        <a href="@Url.Action("Details", "Events", new { id = 1 })" class="btn btn-primary btn-sm">Book Now</a>
                    </div>
                </div>
            </div>

            <!-- Event Card 2 -->
            <div class="event-card fade-in" data-event-id="2">
                <img src="~/uploads/event2.jpg" alt="Tech Summit 2025" class="event-card-image">
                <span class="event-card-badge">New</span>
                <div class="event-card-content">
                    <span class="event-card-category">Technology</span>
                    <h3 class="event-card-title">Global Tech Summit 2025</h3>
                    <div class="event-card-info">
                        <div class="event-info-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3.5V12a.5.5 0 0 1-1 0V8.5H4a.5.5 0 0 1 0-1h3V4.5A.5.5 0 0 1 8 4z" />
                            </svg>
                            July 22, 2025
                        </div>
                        <div class="event-info-item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 0 1 0 0-6 3 3 0 0 0 0 6z" />
                            </svg>
                            Dubai, UAE
                        </div>
                    </div>
                    <div class="event-card-footer">
                        <div class="event-price">$199</div>
                        <a href="@Url.Action("Details", "Events", new { id = 2 })" class="btn btn-primary btn-sm">Get Ticket</a>
                    </div>
                </div>
            </div>
        </div>

        <div style="text-align:center;margin-top:3rem;">
            <a href="@Url.Action("Category", "Events")" class="btn btn-outline">View All Events →</a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        const searchInput = document.getElementById('searchInput');
        const searchButton = document.getElementById('searchButton');

        const performSearch = () => {
            const query = searchInput.value.trim();
            if (query) {
                localStorage.setItem('searchQuery', query);
                window.location.href = '@Url.Action("Category", "Events")';
            } else {
                showToast('Please type something to search', 'warning');
            }
        };

        searchButton.addEventListener('click', performSearch);
        searchInput.addEventListener('keypress', e => {
            if (e.key === 'Enter') performSearch();
        });
    </script>
}