@{
    ViewData["Title"] = "About Us - Eventa";
}

<!-- Hero -->
<section class="hero" style="padding:7rem 0;background:linear-gradient(135deg,rgba(99,102,241,0.08),rgba(139,92,246,0.08));">
    <div class="container" style="text-align:center;">
        <h1 class="section-title">About Eventa</h1>
        <p class="section-subtitle" style="max-width:800px;margin:0 auto;">
            We're on a mission to connect people with unforgettable experiences through seamless event discovery and booking.
        </p>
    </div>
</section>

<!-- Our Story -->
<section style="padding:7rem 0;background:white;">
    <div class="container" style="max-width:900px;">
        <h2 class="section-title" style="text-align:center;">Our Story</h2>
        <p style="font-size:1.15rem;line-height:1.9;color:#475569;text-align:center;max-width:800px;margin:2rem auto;">
            Founded in 2020, Eventa started with a simple idea: <strong>events should be easy to find and joyful to attend</strong>.
        </p>
        <p style="font-size:1.15rem;line-height:1.9;color:#475569;text-align:center;">
            Our team of event enthusiasts and tech innovators built a platform that puts you — the attendee — at the heart of everything. From concerts and sports to workshops and conferences, we make discovering and booking events effortless.
        </p>
        <p style="font-size:1.15rem;line-height:1.9;color:#475569;text-align:center;margin-top:2rem;">
            Today, Eventa powers millions of experiences across the globe and continues to grow with one goal: <strong>helping you live more, worry less</strong>.
        </p>
    </div>
</section>

<!-- Mission, Vision, Values -->
<section style="padding:7rem 0;">
    <div class="container">
        <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(320px,1fr));gap:3rem;text-align:center;">
            <div class="info-card fade-in" style="padding:3rem;">
                <div style="width:100px;height:100px;background:linear-gradient(135deg,var(--primary-color),var(--secondary-color));border-radius:50%;margin:0 auto 1.5rem;display:flex;align-items:center;justify-content:center;">
                    <span style="font-size:3rem;">Target</span>
                </div>
                <h3 style="font-size:2rem;margin:1rem 0 1.2rem;">Our Mission</h3>
                <p style="color:var(--text-secondary);line-height:1.7;font-size:1.1rem;">
                    To make every amazing event accessible with a simple, secure, and delightful booking experience.
                </p>
            </div>

            <div class="info-card fade-in" style="padding:3rem;">
                <div style="width:100px;height:100px;background:linear-gradient(135deg,var(--primary-color),var(--secondary-color));border-radius:50%;margin:0 auto 1.5rem;display:flex;align-items:center;justify-content:center;">
                    <span style="font-size:3rem;">Eye</span>
                </div>
                <h3 style="font-size:2rem;margin:1rem 0 1.2rem;">Our Vision</h3>
                <p style="color:var(--text-secondary);line-height:1.7;font-size:1.1rem;">
                    To become the world's most trusted platform where every experience — big or small — is just one click away.
                </p>
            </div>

            <div class="info-card fade-in" style="padding:3rem;">
                <div style="width:100px;height:100px;background:linear-gradient(135deg,var(--primary-color),var(--secondary-color));border-radius:50%;margin:0 auto 1.5rem;display:flex;align-items:center;justify-content:center;">
                    <span style="font-size:3rem;">Diamond</span>
                </div>
                <h3 style="font-size:2rem;margin:1rem 0 1.2rem;">Our Values</h3>
                <p style="color:var(--text-secondary);line-height:1.7;font-size:1.1rem;">
                    Innovation, integrity, user happiness, and inclusivity guide every decision we make.
                </p>
            </div>
        </div>
    </div>
</section>


<!-- Why Choose Eventa -->
<section style="padding:7rem 0;background:white;">
    <div class="container">
        <h2 class="section-title" style="text-align:center;">Why Choose Eventa?</h2>
        <div class="events-grid" style="gap:2.5rem;margin-top:3rem;">
            <div class="info-card" style="text-align:center;padding:2.5rem;">
                <span style="font-size:4rem;margin-bottom:1rem;display:block;">Search</span>
                <h3>Powerful Discovery</h3>
                <p style="color:var(--text-secondary);">Advanced search and smart filters help you find exactly what you want.</p>
            </div>
            <div class="info-card" style="text-align:center;padding:2.5rem;">
                <span style="font-size:4rem;margin-bottom:1rem;display:block;">Lightning</span>
                <h3>Instant Booking</h3>
                <p style="color:var(--text-secondary);">Book in seconds with instant e-tickets delivered to your phone.</p>
            </div>
            <div class="info-card" style="text-align:center;padding:2.5rem;">
                <span style="font-size:4rem;margin-bottom:1rem;display:block;">Lock</span>
                <h3>Bank-Level Security</h3>
                <p style="color:var(--text-secondary);">Your data and payments are protected with 24/7.</p>
            </div>
            <div class="info-card" style="text-align:center;padding:2.5rem;">
                <span style="font-size:4rem;margin-bottom:1rem;display:block;">Mobile Phone</span>
                <h3>Mobile Tickets</h3>
                <p style="color:var(--text-secondary);">No printing. Just show your phone at the door.</p>
            </div>
            <div class="info-card" style="text-align:center;padding:2.5rem;">
                <span style="font-size:4rem;margin-bottom:1rem;display:block;">Chat</span>
                <h3>24/7 Support</h3>
                <p style="color:var(--text-secondary);">Real humans ready to help anytime.</p>
            </div>
            <div class="info-card" style="text-align:center;padding:2.5rem;">
                <span style="font-size:4rem;margin-bottom:1rem;display:block;">Gift</span>
                <h3>Best Price Guarantee</h3>
                <p style="color:var(--text-secondary);">We match or beat any competitor price.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA -->
<section style="padding:8rem 0;background:linear-gradient(135deg,rgba(99,102,241,0.08),rgba(139,92,246,0.08));text-align:center;">
    <div class="container">
        <h2 style="font-size:3rem;margin-bottom:1.5rem;">Ready to Start Your Next Adventure?</h2>
        <p style="font-size:1.3rem;margin-bottom:3rem;opacity:0.9;color:var(--text-secondary);">
            Join millions who trust Eventa every day
        </p>
        <div>
            <a asp-controller="Events" asp-action="Category" class="btn btn-primary" style="padding:1.1rem 3rem;font-size:1.2rem;margin:0.5rem;">
                Browse Events
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline" style="padding:1.1rem 3rem;font-size:1.2rem;margin:0.5rem;">
                Join Eventa
            </a>
        </div>
    </div>
</section>