@{
    ViewData["Title"] = "Create Event - Eventa";
}

@section Styles {
    <style>
        .page-header {
            text-align: center;
            padding: 5rem 0 3rem;
            background: linear-gradient(135deg,rgba(99,102,241,0.06),rgba(139,92,246,0.06));
        }

            .page-header h1 {
                font-size: 3.5rem;
                font-weight: 800;
                background: linear-gradient(135deg,var(--primary-color),var(--secondary-color));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                color: transparent;
                margin: 0 0 1rem;
            }

        .form-container {
            max-width: 1000px;
            margin: 0 auto 5rem;
            background: white;
            border-radius: 28px;
            box-shadow: var(--shadow-xl);
            overflow: hidden;
        }

        .form-header {
            background: linear-gradient(135deg,var(--primary-color),var(--secondary-color));
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }

            .form-header h2 {
                font-size: 2.6rem;
                margin: 0 0 0.8rem;
                font-weight: 800;
            }

            .form-header p {
                font-size: 1.2rem;
                opacity: 0.95;
            }

        .form-body {
            padding: 3.5rem 3rem;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(320px,1fr));
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.8rem;
        }

            .form-group label {
                display: block;
                margin-bottom: 0.7rem;
                font-weight: 600;
                color: var(--text-primary);
                font-size: 1.05rem;
            }

                .form-group label span {
                    color: #ef4444;
                }

        .form-control {
            width: 100%;
            padding: 1.9rem 1.3rem;
            border: 2.5px solid #e2e8f0;
            border-radius: 16px;
            font-size: 1.05rem;
            transition: var(--transition);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 5px rgba(99,102,241,0.12);
            }

        textarea.form-control {
            min-height: 140px;
            resize: vertical;
        }

        .ticket-types-section {
            margin: 3.5rem 0;
            padding: 2.5rem;
            background: #f8fafc;
            border-radius: 20px;
            border: 2px dashed #e0e7ff;
        }

        .ticket-type {
            background: white;
            border: 2px solid transparent;
            border-radius: 18px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-md);
            transition: var(--transition);
        }

            .ticket-type:hover {
                border-color: var(--primary-color);
                transform: translateY(-4px);
                box-shadow: var(--shadow-lg);
            }

        .ticket-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit,minmax(250px,1fr));
            gap: 1.5rem;
            align-items: end;
        }

        .remove-ticket-btn {
            background: #ef4444;
            color: white;
            border: none;
            padding: 0.7rem 1.2rem;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
        }

            .remove-ticket-btn:hover {
                background: #dc2626;
                transform: scale(1.05);
            }

        .btn-add-ticket {
            background: transparent;
            color: var(--primary-color);
            border: 2px dashed var(--primary-color);
            padding: 1rem 2rem;
            border-radius: 16px;
            font-weight: 600;
            width: 100%;
            margin-top: 1rem;
            transition: var(--transition);
        }

            .btn-add-ticket:hover {
                background: rgba(99,102,241,0.08);
            }

        .form-actions {
            display: flex;
            gap: 1.5rem;
            margin-top: 4rem;
            flex-wrap: wrap;
        }

        .btn-submit {
            flex: 1;
            padding: 1.4rem;
            font-size: 1.3rem;
            font-weight: 700;
            border-radius: 18px;
        }
    </style>
}

<div class="page-header">
    <div class="container">
        <h1 id="mainTitle">Create New Event</h1>
        <p style="font-size:1.3rem;color:var(--text-secondary);max-width:700px;margin:0 auto;">
            Share your amazing event with millions of attendees worldwide
        </p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <div class="form-header">
            <h2 id="formTitle">Create Your Event</h2>
            <p>Fill in the details below to publish your event</p>
        </div>

        <div class="form-body">
            <form id="createEventForm">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Event Title <span>*</span></label>
                        <input type="text" id="eventTitle" class="form-control" placeholder="e.g. Summer Music Festival 2025" required>
                    </div>
                    <div class="form-group">
                        <label>Category <span>*</span></label>
                        <select id="eventCategory" class="form-control" required>
                            <option value="">Select category</option>
                            <option value="music">Music</option>
                            <option value="sports">Sports</option>
                            <option value="technology">Technology</option>
                            <option value="arts">Arts & Culture</option>
                            <option value="food">Food & Drink</option>
                            <option value="business">Business</option>
                            <option value="health">Health & Wellness</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>Description <span>*</span></label>
                    <textarea id="eventDescription" class="form-control" placeholder="Describe your event..." required></textarea>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label>Start Date <span>*</span></label>
                        <input type="date" id="dateFrom" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>End Date (optional)</label>
                        <input type="date" id="dateTo" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Time <span>*</span></label>
                        <input type="time" id="eventTime" class="form-control" required>
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label>Venue / Location <span>*</span></label>
                        <input type="text" id="eventLocation" class="form-control" placeholder="e.g. Central Park, New York" required>
                    </div>
                    <div class="form-group">
                        <label>Capacity (optional)</label>
                        <input type="number" id="eventCapacity" class="form-control" placeholder="e.g. 10000" min="1">
                    </div>
                </div>

                <div class="form-group">
                    <label>Event Image URL (optional)</label>
                    <input type="url" id="eventImage" class="form-control" placeholder="https://example.com/event-banner.jpg">
                    <small style="color:#64748b;">We'll use a placeholder if left empty</small>
                </div>

                <div class="ticket-types-section">
                    <h3 style="margin:0 0 2rem;font-size:1.8rem;color:var(--text-primary);">Ticket Types</h3>
                    <div id="ticketTypesContainer">
                        <div class="ticket-type">
                            <div class="ticket-grid">
                                <div class="form-group">
                                    <label>Ticket Name</label>
                                    <input type="text" class="ticket-name form-control" value="Regular" required>
                                </div>
                                <div class="form-group">
                                    <label>Price ($)</label>
                                    <input type="number" step="0.01" class="ticket-price form-control" value="89.00" min="0" required>
                                </div>
                                <div class="form-group">
                                    <label>Available Quantity</label>
                                    <input type="number" class="ticket-quantity form-control" value="1000" min="1" required>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="remove-ticket-btn" onclick="this.closest('.ticket-type').remove()">
                                        Remove
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="button" id="addTicketBtn" class="btn-add-ticket">
                        + Add Another Ticket Type
                    </button>
                </div>

                <div class="form-actions">
                    <button type="submit" id="submitBtn" class="btn btn-primary btn-submit">
                        Publish Event
                    </button>
                    <a asp-controller="Organizer" asp-action="Index" class="btn btn-outline btn-submit">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/create-event.js" asp-append-version="true"></script>